{
  "manifest_version": 2,

  "default_locale": "en_US",
  "name": "__MSG_extensionName__",
  "short_name": "STTB",
  "description": "__MSG_extensionDescription__",

  "icons": {
    "16": "icons/Icon-16.png",
    "32": "icons/Icon-32.png",
    "48": "icons/Icon-48.png",
    "64": "icons/Icon-64.png",
    "128": "icons/Icon-128.png"
  },

  "permissions": [
    "tabs",
    "contextMenus",
    "storage"
  ],

  "background": {
    "scripts": [
      "global/js/browser-polyfill.js",
      "global/js/bowser.js",
      "global/js/punycode.min.js",
      "global/js/global.js",
      "global/js/event.js",
      "global/js/utils.js",
      "global/js/const.js",
      "global/js/log.js",
      "global/js/i18next/i18next.min.js",
      "global/js/i18next/i18nextBrowserLanguageDetector.min.js",
      "global/js/i18next/i18nextXHRBackend.js",
      "global/js/i18n.js",
      "global/js/context-menus.js",
      "global/js/background.js",
      "global/js/tabs.js",
      "global/js/referral-programs.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "19": "global/img/sttb-icon-19.png",
      "38": "global/img/sttb-icon-38.png"
    },
    "default_title": "__MSG_extensionName__",
    "default_popup": "browser-action/index.html"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "css": [
        "shared/custom-elements/custom-elements.css"
      ],
      "js": [
        "global/js/browser-polyfill.js",
        "global/js/bowser.js",
        "global/js/punycode.min.js",
        "global/js/global.js",
        "global/js/utils.js",
        "libraries/jquery-3.3.1.min.js",
        "content-script/js/sttb.js",
        "global/js/const.js",
        "global/js/log.js",
        "global/js/i18next/i18next.min.js",
        "global/js/i18next/i18nextBrowserLanguageDetector.min.js",
        "global/js/i18next/i18nextXHRBackend.js",
        "global/js/i18n.js",
        "shared/custom-elements/custom-elements.js",
        "libraries/jquery.easing.js",
        "libraries/jQueryRotate.js",
        "libraries/shortcut.js",
        "jquery.scroll.pack.js",
        "content-script/js/content-script.js",
        "content_script.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "shared/buttons/buttons.css",
    "shared/buttons/*.svg",
    "shared/custom-elements/custom-elements.css",
    "*.json"
  ]
}
